    "start:prod": "node src/index.js",
    "test": "jest --config jest.config.json",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint -c .eslintrc.json **/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "dependencies": {
